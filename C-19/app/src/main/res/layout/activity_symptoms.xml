<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/LLayoutView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <fragment
        android:id="@+id/youtube_fragment"
        android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="327dp" />

    <Button
        android:id="@+id/buPlaySymptom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Start Codvid Symptoms Video" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0.5dp"
            android:text="Symptoms"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="1dp"
            android:text="The severity of COVID-19 symptoms can range from very mild to severe. Some people may have only a few symptoms, and some people may have no symptoms at all. People who are older or who have existing chronic medical conditions, such as heart disease, lung disease, diabetes, severe obesity, chronic kidney or liver disease, or who have compromised immune systems may be at higher risk of serious illness. This is similar to what is seen with other respiratory illnesses, such as influenza.Signs and symptoms of coronavirus disease 2019 (COVID-19) may appear two to 14 days after exposure. This time after exposure and before having symptoms is called the incubation period. Common signs and symptoms can include:"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv4"
            android:drawableLeft="@drawable/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:text="Fever"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv5"
            android:drawableLeft="@drawable/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:text="Cough"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv6"
            android:drawableLeft="@drawable/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:text="Shortness of breath or difficulty breathing"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv7"
            android:drawableLeft="@drawable/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:text="Tiredness,Aches,Chills and Sore throat"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv8"
            android:drawableLeft="@drawable/bullet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="5dp"
            android:text="Loss of smell,Loss of taste,Headache,Diarrhea and Severe vomiting"
            android:textColor="#000000"
            android:textSize="18sp"
            android:visibility="visible" />


    </LinearLayout>
</ScrollView>
